<?xml version="1.0"?>
<!--
###################################################
##Virtual Channel Formatter
###################################################
 -->
<block>
    <name>Serial Port Source</name>
    <key>serial_port_source</key>
    <category>Serial</category>
    <import>import grpyserial</import>
    <make>grpyserial.serial_port_source($device,$parity,$baudrate,$stopbits,$bytesize,$waitfornewline,$debug)</make>
    <param>
        <name>Device Path</name>
        <key>device</key>
        <type>string</type>
    </param>
    <param>
        <name>Stop Bits</name>
        <key>stopbits</key>
        <type>int</type>
        <option>
			<name>ONE</name>
			<key>0</key>
		</option>
        <option>
			<name>TWO</name>
			<key>1</key>
		</option>
    </param>
    <param>
    <name>Parity</name>
        <key>parity</key>
        <type>int</type>
        <option>
			<name>NONE</name>
			<key>0</key>
		</option>
        <option>
			<name>EVEN</name>
			<key>1</key>
		</option>
        <option>
			<name>ODD</name>
			<key>2</key>
		</option>
    </param>
    <param>
    <name>Byte Size</name>
        <key>bytesize</key>
        <type>int</type>
        <option>
			<name>7</name>
			<key>0</key>
		</option>
        <option>
			<name>8</name>
			<key>1</key>
        </option>
    </param>
    <param>
    <name>Wait For New Line?</name>
        <key>waitfornewline</key>
        <type>bool</type>
        <option>
			<name>Yes</name>
			<key>True</key>
		</option>
        <option>
			<name>No</name>
			<key>False</key>
        </option>
    </param>
    <param>
        <name>Buad Rate</name>
        <key>baudrate</key>
        <type>int</type>
    </param>

    <param>
    <name>DEBUG</name>
        <key>debug</key>
        <type>bool</type>
		<option>
			<name>Spam Console</name>
			<key>True</key>
		</option>
		<option>
			<name>Don't Spam Console</name>
			<key>False</key>
		</option>
    </param>
    
    <source>
        <name>out</name>
        <type>byte</type>
    </source>
 
    <doc>
Serial port byte source.
    </doc>

</block>
